block body
    .container-fluid
        .row
            p
            br
            br
            br
        .row
            .col-md-12
                #userProfile
                    script.
                        setUserProfile(user)
        .row
            .col-md-12
                ul.nav.nav-pills
                    li.active
                        a(href='#1a', data-toggle='tab') Social Overview
                    li
                        a(href='#2a', data-toggle='tab') Tickets Dashboard

                .tab-content.clearfix
                    #1a.tab-pane.active
                        .col-md-12
                            #social.widget
                        .row
                            .col-md-6
                                #myfirstchart
                                    script.
                                        getTweets()
                                        //var auto_refresh_SocialFeeds = setInterval(function () {
                                        //    getTweets()
                                        //}, 15000)
                            .col-md-6
                                #wordcloud

                    #2a.tab-pane
                        .row
                            .col-md-3
                                #fltrListCattegory
                                br
                            .col-md-3
                                #fltrListState

                        .row
                            .col-md-6
                                .widget
                                    .widget-content.bg-belize-hole
                                        .text-center
                                            #createdTickets.span.font-size-40.counter No tickets found
                                            p Created Tickets
                                            i.fa.fa-code.fa-3x
                            .col-md-6
                                .widget
                                    .widget-content.bg-pumpkin
                                        .text-center
                                            #openTickets.span.font-size-40.counter No tickets found
                                            p Open Tickets
                                            i.fa.fa-tasks.fa-3x
                        .row
                            #clickNewTickets.col-md-6
                                .widget
                                    .widget-content.bg-green-sea
                                        .text-center
                                            #newTickets.span.font-size-40.counter No tickets found
                                            p New Tickets
                                            i.fa.fa-plus-circle.fa-3x
                            .col-md-6
                                .widget
                                    .widget-content.bg-peter-river
                                        .text-center
                                            #closedTickets.span.font-size-40.counter No tickets found
                                            p Closed Tickets
                                            i.fa.fa-envelope.fa-3x
                        .row
                            .col-md-6
                                .widget
                                    #ticketChart2
                                        script.
                                            getTickets()
                                            //var auto_refresh_Tickets = setInterval(function () {
                                            //    getTickets()
                                            //}, 15000)
                            .col-md-6
                                .widget
                                    #ticketChart
                        .row
                            .col-md-12
                                .widget
                                    #ticketsList
                                    #pagnation
















