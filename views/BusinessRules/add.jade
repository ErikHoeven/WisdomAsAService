          // (3) Add value to array
          $('#cmdAddCatValue').click(function(){
              lstCatValues.push($('#CatValue' ).val());
              $('#CatValue' ).val('');


              //START TABLE
              catValueHTML = '<p><table class="table table-sm"><th>Cattegorie waarde:</th>';


