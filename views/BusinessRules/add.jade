                  });
                  console.info(datasetvb);
                  buildPieChart('pieDemo', datasetvb, 'Voorbeeld', 250, 250);
              }
          });

          $('#kleur').focusin(function () {
              $('#pieDemo').html('');
              teller = 0;
          });



